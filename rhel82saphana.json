{
    "type": "Microsoft.VirtualMachineImages",
    "apiVersion": "2020-02-14",
    "location": "<region1>",
    "dependsOn": [],
    "tags": {
        "imagebuilderTemplate": "AzureImageBuilderSIG",
        "userIdentity": "enabled"
            },
        "identity": {
            "type": "UserAssigned",
                    "userAssignedIdentities": {
                    "<imgBuilderId>": {}
                        
                }
                },
    
    "properties": {

        "buildTimeoutInMinutes" : 80,

        "vmProfile": 
            {
            "vmSize": "Standard_D2as_v4",
            "osDiskSizeGB": 128,
            "vnetConfig": {
                "subnetId": "/subscriptions/<subscriptionID>/resourceGroups/<vnetRgName>/providers/Microsoft.Network/virtualNetworks/<vnetName>/subnets/<subnetName>"
                }
            },
        
        "source": {
            "type": "PlatformImage",
                "publisher": "redhat",
                "offer": "rhel-byos",
                "sku": "rhel-lvm82-gen2",
                "version": "latest",
                "planInfo": {
                "planName": "rhel-lvm82-gen2",
                "planProduct": "rhel-byos",
                "planPublisher": "redhat"
                }
 
        },
        "customize": [
            {
                "type": "File",
                "name": "RunScriptFromSource",
                "scriptUri": "https://raw.githubusercontent.com/bryalong77/code/main/rhel82hana.sh",
                "destination":"/tmp/config.sh"
            },
            {
                "type": "Shell",
                "name": "setupBuildPath",
                "inline": [
                    "cd /tmp",
                    "sudo sh ./config.sh"
                ]
            }
        ],
        "distribute": 
        [
            {   
                "type": "SharedImage",
                "galleryImageId": "/subscriptions/<subscriptionID>/resourceGroups/<rgName>/providers/Microsoft.Compute/galleries/RedHat/images/<imageDefName>",
                "runOutputName": "<runOutputName>",
                "artifactTags": {
                    "source": "azureVmImageBuilder",
                    "baseosimg": "rhel82"
                },
                "replicationRegions": [
                  "<region1>",
                  "<region2>"
                ]
            }
        ]
    }
}
