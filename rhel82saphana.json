{
    "type": "Microsoft.VirtualMachineImages",
    "apiVersion": "2020-02-14",
    "location": "eastus2",
    "dependsOn": [],
    "tags": {
        "imagebuilderTemplate": "AzureImageBuilderSIG",
        "userIdentity": "enabled"
            },
        "identity": {
            "type": "UserAssigned",
                    "userAssignedIdentities": {
                    "/subscriptions/425be2b0-b31c-4a72-a185-9f1f55ce5349/resourcegroups/rg-sapimages/providers/Microsoft.ManagedIdentity/userAssignedIdentities/imagebuild": {}
                        
                }
                },
    
    "properties": {

        "buildTimeoutInMinutes" : 80,

        "vmProfile": 
            {
            "vmSize": "Standard_D4ds_v4",
            "osDiskSizeGB": 128,
            "vnetConfig": {
                "subnetId": "/subscriptions/<subscriptionID>/resourceGroups/<vnetRgName>/providers/Microsoft.Network/virtualNetworks/<vnetName>/subnets/<subnetName>"
                }
            },
        
        "source": {
            "type": "PlatformImage",
                "publisher": "redhat",
                "offer": "rhel-byos",
                "sku": "rhel-lvm82-gen2",
                "version": "latest",
                "planInfo": {
                "planName": "rhel-lvm82-gen2",
                "planProduct": "rhel-byos",
                "planPublisher": "redhat"
                }
 
        },
        "customize": [
            {
                "type": "Shell",
                "name": "RunScriptFromSource",
                "scriptUri": "https://raw.githubusercontent.com/bryalong77/code/main/rhel82hana.sh"
            }
        ],
        "distribute": 
        [
            {   
                "type": "SharedImage",
                "galleryImageId": "/subscriptions/425be2b0-b31c-4a72-a185-9f1f55ce5349/resourceGroups/rg-sapimages/providers/Microsoft.Compute/galleries/RedHat/images/rhel82saphana",
                "runOutputName": "rhel82sapsig",
                "artifactTags": {
                    "source": "azureVmImageBuilder",
                    "baseosimg": "rhel82"
                },
                "replicationRegions": [
                  "eastus2",
                  "centralus"
                ]
            }
        ]
    }
}
